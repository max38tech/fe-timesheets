
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images:
    // Users can write (upload/update/delete) to their own designated folder.
    // Images are publicly readable once uploaded (common for avatars).
    match /profileImages/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback: By default, if no 'allow' rule matches, access is denied.
    // No explicit deny-all is strictly needed here as per Firebase Storage rules behavior.
  }
}
